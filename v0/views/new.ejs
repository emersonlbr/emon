<% include partials/header %>

<div class="container">
    <form action="/users" method="POST">
      <div class="row">
        <div class="col-md-6 mb-3">
          <label for="name">Name</label>
          <input type="text" class="form-control" name="user[name]" id="name" placeholder="Name" required>
        </div>
        <div class="col-md-6 mb-3">
          <label for="email">Email</label>
          <input type="user[email]" class="form-control" name="email" id="email" placeholder="Email" required>
        </div>
      </div>
    
      <div class="row">
        <div class="col-md-3 mb-3">
          <label for="country">Country</label>
          <input type="text" class="form-control" name="user[country]" id="country" placeholder="Country" required>
        </div>
        <div class="col-md-3 mb-3">
          <label for="city">City</label>
          <input type="text" class="form-control" name="user[city]" id="city" placeholder="City" required>
        </div>
        <div class="col-md-3 mb-3">
          <label for="age">Age</label>
          <input type="text" class="form-control" name="user[age]" id="age" placeholder="Age" required>
        </div>
        <div class="col-md-3 mb-3">
          <label for="password">Password</label>
          <input type="password" class="form-control" name="user[password]" id="password" placeholder="Password" required>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6 mb-3">
          <label for="image">Image</label>
          <input type="text" class="form-control" name="user[image]" id="image" placeholder="Image" required>
        </div>
        <div class="col-md-6 mb-3">
          <label for="description">Description</label>
          <input type="text" class="form-control" name="user[description]" id="description" placeholder="Description" maxlength="299" required>
        </div>
      </div>

      <button class="btn btn-primary" type="submit">Submit form</button>
    </form>

</div>




<% include partials/footer %>